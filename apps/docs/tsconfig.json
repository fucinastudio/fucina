{
  "extends": "@fucina/tsconfig/nextjs.json",
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/pages/*": ["pages/*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"],
    },
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mdx",
    "pages/_app.mdx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
